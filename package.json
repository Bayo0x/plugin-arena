{
  "name": "@elizaos/plugin-arena",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.6.3",
    "headers-polyfill": "^4.0.3",
    "json-stable-stringify": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4", 
    "prettier": "3.6.1",
    "tsup": "8.5.0",
    "typescript": "^5.8.3",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsup && elizaos test",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --write ./src",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "0000000000000000000000000000000000000000",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-arena.git"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ARENA_ACCESS_TOKEN": {
        "type": "string",
        "description": "Personal Access Token from https://www.are.na/account/developer",
        "required": true,
        "sensitive": true
      },
      "ARENA_DEFAULT_CHANNEL_SLUG": {
        "type": "string",
        "description": "Channel slug where generated blocks should be published",
        "required": true,
        "sensitive": false
      },
      "ARENA_BLOCK_VISIBILITY": {
        "type": "string",
        "description": "Visibility for new blocks: public, private, or unlisted",
        "required": false,
        "default": "public",
        "sensitive": false
      },
      "ARENA_ENABLE_POST": {
        "type": "boolean",
        "description": "Enable autonomous Arena posting",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL": {
        "type": "number",
        "description": "Fallback interval between posts in minutes",
        "required": false,
        "default": 120,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL_MIN": {
        "type": "number",
        "description": "Minimum interval for jittered scheduling",
        "required": false,
        "default": 90,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL_MAX": {
        "type": "number",
        "description": "Maximum interval for jittered scheduling",
        "required": false,
        "default": 150,
        "sensitive": false
      },
      "ARENA_POST_IMMEDIATELY": {
        "type": "boolean",
        "description": "Publish a block immediately when the service starts",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_DRY_RUN": {
        "type": "boolean",
        "description": "Log Arena actions without calling the API",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_MAX_BLOCKS_PER_RUN": {
        "type": "number",
        "description": "Maximum number of blocks created during one scheduled run",
        "required": false,
        "default": 1,
        "sensitive": false
      },
      "ARENA_TARGET_CHANNELS": {
        "type": "string",
        "description": "Comma-separated list of Arena channel slugs to monitor",
        "required": false,
        "default": "",
        "sensitive": false
      },
      "ARENA_USER_AGENT": {
        "type": "string",
        "description": "Custom user agent string for Arena API requests",
        "required": false,
        "sensitive": false
      }
    }
  }
}
