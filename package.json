{
  "name": "@bayo0x/plugin-arena",
  "version": "0.1.0",
  "description": "ElizaOS plugin for Arena.social integration - post threads, engage with content, monitor trends, and analyze performance",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "Bayo0x",
  "keywords": [
    "elizaos",
    "elizaos-plugin",
    "arena",
    "arena-social",
    "social-media",
    "ai-agent",
    "automation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "headers-polyfill": "^4.0.3",
    "json-stable-stringify": "^1.3.0"
  },
  "peerDependencies": {
    "@elizaos/core": ">=1.6.0"
  },
  "devDependencies": {
    "@elizaos/core": "^1.6.3",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "prettier": "3.6.1",
    "tsup": "8.5.0",
    "typescript": "^5.8.3",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsup && elizaos test",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --write ./src",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bayo0x/plugin-arena.git"
  },
  "bugs": {
    "url": "https://github.com/Bayo0x/plugin-arena/issues"
  },
  "homepage": "https://github.com/Bayo0x/plugin-arena#readme",
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ARENA_ACCESS_TOKEN": {
        "type": "string",
        "description": "Arena.social personal access token from account settings",
        "required": true,
        "sensitive": true
      },
      "ARENA_DEFAULT_FEED": {
        "type": "string",
        "description": "Default feed to monitor: trending, suggested, my, home, or public",
        "required": false,
        "default": "trending",
        "sensitive": false
      },
      "ARENA_ENABLE_POST": {
        "type": "boolean",
        "description": "Enable autonomous Arena posting",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL": {
        "type": "number",
        "description": "Fallback interval between posts in minutes",
        "required": false,
        "default": 120,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL_MIN": {
        "type": "number",
        "description": "Minimum interval for jittered scheduling",
        "required": false,
        "default": 90,
        "sensitive": false
      },
      "ARENA_POST_INTERVAL_MAX": {
        "type": "number",
        "description": "Maximum interval for jittered scheduling",
        "required": false,
        "default": 150,
        "sensitive": false
      },
      "ARENA_POST_IMMEDIATELY": {
        "type": "boolean",
        "description": "Publish a thread immediately when the service starts",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_DRY_RUN": {
        "type": "boolean",
        "description": "Log Arena actions without calling the API",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "ARENA_MAX_BLOCKS_PER_RUN": {
        "type": "number",
        "description": "Maximum threads created during one scheduled run",
        "required": false,
        "default": 1,
        "sensitive": false
      },
      "ARENA_TARGET_FEEDS": {
        "type": "string",
        "description": "Comma-separated list of feeds to monitor (trending, suggested, my, home)",
        "required": false,
        "default": "trending,suggested",
        "sensitive": false
      },
      "ARENA_USER_AGENT": {
        "type": "string",
        "description": "Custom user agent string for Arena API requests",
        "required": false,
        "sensitive": false
      }
    }
  }
}
