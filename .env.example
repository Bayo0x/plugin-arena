# ==========================================
# ARENA API CONFIGURATION (REQUIRED)
# ==========================================

# Your Arena personal access token (REQUIRED)
# Get it from: https://arena.social/settings (or equivalent)
ARENA_ACCESS_TOKEN=your_arena_access_token_here

# ==========================================
# ARENA API SETTINGS (Optional)
# ==========================================

# Arena API base URL
# Default: https://api.arena.social
ARENA_BASE_URL=https://api.arena.social

# Custom user agent for API requests
# Example: MyArenaBot/1.0
ARENA_USER_AGENT=ArenaBot/1.0

# Default feed to monitor
# Options: trending, suggested, my, home, public
ARENA_DEFAULT_FEED=trending

# Default user ID for operations
# Leave empty to use authenticated user
ARENA_DEFAULT_USER_ID=

# ==========================================
# PRIVACY & POSTING (Optional)
# ==========================================

# Privacy type for new posts
# 0=public, 1=private, 2=followers only, 3=mentions, 4=custom, 5=community
ARENA_PRIVACY_TYPE=0

# Default community ID for posts (optional)
# Leave empty if not posting to a specific community
ARENA_COMMUNITY_ID=
ARENA_DEFAULT_COMMUNITY_ID=

# Dry run mode - logs actions without executing them
# Set to true for testing
ARENA_DRY_RUN=false

# Maximum thread length (characters)
# Default: 280
ARENA_MAX_THREAD_LENGTH=280

# Retry limit for failed API calls
# Default: 3
ARENA_RETRY_LIMIT=3

# ==========================================
# AUTOMATED POSTING SERVICE (Optional)
# ==========================================

# Enable the automated posting service
# Set to true to enable scheduled posts
ARENA_ENABLE_POST=false

# Post immediately on startup
# Set to true to post once when bot starts
ARENA_POST_IMMEDIATELY=false

# Posting interval in minutes
# How often to create automated posts
ARENA_POST_INTERVAL=120

# Minimum interval (for jitter)
ARENA_POST_INTERVAL_MIN=90

# Maximum interval (for jitter)
ARENA_POST_INTERVAL_MAX=150

# Maximum number of blocks to post per cycle
ARENA_MAX_BLOCKS_PER_RUN=1

# ==========================================
# DISCOVERY SERVICE (Optional)
# ==========================================

# Enable automated discovery service
# Monitors feeds for new content and opportunities
# Default: Follows ARENA_ENABLE_ACTIONS value
ARENA_ENABLE_DISCOVERY=false

# Comma-separated list of feeds to monitor
# Example: trending,suggested,my
ARENA_TARGET_FEEDS=trending,suggested

# Comma-separated list of users to monitor
# Example: user123,user456
ARENA_TARGET_USERS=

# Discovery scan interval (minutes)
# How often to check feeds for new content
ARENA_DISCOVERY_INTERVAL=15

# Minimum discovery interval (for jitter)
ARENA_DISCOVERY_INTERVAL_MIN=10

# Maximum discovery interval (for jitter)
ARENA_DISCOVERY_INTERVAL_MAX=20

# Minimum follower count to engage with
# Filters out very new/low-quality accounts
# Default: 10
ARENA_MIN_FOLLOWER_COUNT=10

# Maximum follows per discovery cycle
# Prevents aggressive following behavior
# Default: 5
ARENA_MAX_FOLLOWS_PER_CYCLE=5

# ==========================================
# ENGAGEMENT SYSTEM (Optional)
# ==========================================

# Enable automated engagement system
# Agent will automatically engage with discovered content
ARENA_ENABLE_ENGAGEMENT=false

# Enable automated replies to mentions
# Default: true
ARENA_ENABLE_REPLIES=true

# Enable all engagement actions (likes, reposts, etc)
# Master switch for engagement features
# Default: false (must explicitly enable)
ARENA_ENABLE_ACTIONS=false

# Engagement scan interval (minutes)
# How often to check for engagement opportunities
ARENA_ENGAGEMENT_INTERVAL=30

# Minimum engagement interval (for jitter)
ARENA_ENGAGEMENT_INTERVAL_MIN=20

# Maximum engagement interval (for jitter)
ARENA_ENGAGEMENT_INTERVAL_MAX=40

# Maximum engagements per scan cycle
# Prevents excessive engagement behavior
# Default: 5
ARENA_MAX_ENGAGEMENTS_PER_RUN=5

# Engagement decision interval (minutes)
# How often agent evaluates engagement decisions
ARENA_ENGAGEMENT_DECISION_INTERVAL=15

# Minimum decision interval (for jitter)
ARENA_ENGAGEMENT_DECISION_INTERVAL_MIN=10

# Maximum decision interval (for jitter)
ARENA_ENGAGEMENT_DECISION_INTERVAL_MAX=20

# ==========================================
# RATE LIMITS (Optional)
# ==========================================

# Maximum likes per hour
# Prevents rate limiting and spam-like behavior
# Default: 20
ARENA_MAX_LIKES_PER_HOUR=20

# Maximum reposts per hour
# Default: 10
ARENA_MAX_REPOSTS_PER_HOUR=10

# Maximum replies per hour
# Default: 10
ARENA_MAX_REPLIES_PER_HOUR=10

# Maximum follows per hour
# Default: 10
ARENA_MAX_FOLLOWS_PER_HOUR=10

# ==========================================
# TRENDING MONITOR SERVICE (Optional)
# ==========================================

# Enable automated trending monitoring service
# Scans trending posts, topics, and tokens periodically
# Stores data in memory for trading decisions and content generation
ARENA_TRENDING_MONITOR_ENABLED=true

# How often to scan for trending content (minutes)
# Recommended: 15-30 minutes for active monitoring
ARENA_TRENDING_SCAN_INTERVAL=15

# Feeds to scan for trending analysis
# Comma-separated list: trending,suggested,public
ARENA_TRENDING_FEEDS=trending,suggested

# Store trending data in ElizaOS memory
# Set to false to disable memory storage (not recommended)
ARENA_TRENDING_STORE_MEMORY=true

# Maximum number of trending snapshots to keep in memory
# Older snapshots are automatically cleaned up
ARENA_TRENDING_MAX_SNAPSHOTS=20

# ==========================================
# MENTION MONITOR SERVICE (Optional)
# ==========================================

# Enable automated mention monitoring service
# Periodically checks for new mentions and notifications
# Alerts agent when mentioned or replied to
ARENA_MENTION_MONITOR_ENABLED=true

# How often to check for new mentions (minutes)
# Recommended: 1-5 minutes for fast response (people love quick replies!)
# Lower = faster response, higher API usage
ARENA_MENTION_SCAN_INTERVAL=1

# How far back to look for mentions (hours)
# Older mentions are ignored to avoid re-processing
ARENA_MENTION_MAX_AGE_HOURS=48

# Minimum content length for mention to be valid
# Filters out spam and very short mentions
ARENA_MENTION_MIN_LENGTH=10

# Exclude likely spam mentions
# Basic spam detection before agent evaluation
ARENA_MENTION_EXCLUDE_SPAM=true

# Store mention history in memory
# Helps avoid re-processing same mentions
ARENA_MENTION_STORE_HISTORY=true

# Maximum mentions to keep in history
# Prevents memory bloat from old mentions
ARENA_MENTION_MAX_HISTORY=50

# ==========================================
# ADVANCED SETTINGS (Optional)
# ==========================================

# HTTP timeout in milliseconds
# Default: 30000 (30 seconds)
# ARENA_HTTP_TIMEOUT_MS=30000

# Feed page size (number of threads per page)
# Default: 50
# ARENA_FEED_PAGE_SIZE=50
